{
    "manifest_version": 3,
    "name": "AutoTrader UK Remote Garage Hider",
    "version": "1.0.1",
    "description": "Hides remote/home delivery car garages as AutoTrader provides no way to do this and will keep showing you cars that are 200+ miles away.",
    "permissions": [
        "webNavigation",
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "*://*.autotrader.co.uk/car-search*"
    ],
    "background": {
        "scripts": [
            "worker.js"
        ]
    },
    "options_ui": {
        "page": "options.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "autotraderukvendorfilter@dillanmann.co.uk"
        }
    }
}